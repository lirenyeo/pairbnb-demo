<!DOCTYPE html>
<html>
  <head>
    <title>PairbnbDemo</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <%= link_to 'Home', root_url, class: "navbar-brand" %>
        </div>
        <% if signed_in? %>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <p class="navbar-text">Signed in as <a href="#" class="navbar-link"><%= link_to current_user.email, edit_user_path(current_user) %></a></p>
            </li>
            <li><%= button_to 'Sign out', sign_out_path, method: :delete, class: "btn btn-default navbar-btn" %></li>
          </ul>
        <% else %>
          <ul class="nav navbar-nav navbar-left">
            <li><%= link_to 'Sign in', sign_in_path %></li>
          </ul>
        <% end %>
      </div>
    </nav>
    <div id="flash">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: "alert alert-#{name}" %>
      <% end %>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>